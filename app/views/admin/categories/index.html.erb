<h2 class="page-header">Administración de categorias <%= link_to 'Agregar nueva',
new_admin_category_path, class:'btn btn-success pull-right' %></h2>
<table class="table table-striped">
  <tr>
    <th>Nombre</th>
    <th>Fecha de creación</th>
    <th>Acciones</th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= category.created_at.to_time.strftime('%e %B a las %l:%M %p') %></td>
      <td><%= link_to 'Editar', edit_admin_category_path(category), class:'btn btn-primary' %>
      <%= link_to 'Eliminar', admin_category_path(category), method: :delete, data: { confirm: 'Estas seguro?' },
      class:'btn btn-danger' %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @posts %>
