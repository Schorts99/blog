<div class="comments">
  <h2 class="page-header"><%= @post.comments.length %> Comentarios</h2>
  <% @post.comments.each do |comment| %>
    <div class="comment">
      <div class="row">
        <div class="col-md-2">
          <%= image_tag('/user/missing_avatar.jpg') %>
        </div>
        <div class="col-md-10">
          <div class="well">
            <h4><%= comment.name %><span>/<%= comment.created_at.to_time.
            strftime('%e %B a las %l:%M %p') %></span></h4>
            <%= comment.body %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="well add-comment">
    <h2 class="page-header">Agregar comentario</h2>
    <%= form_for([@post, @post.comments.build]) do |f| %>
      <div class="form-group">
        <%= f.label :name, 'Nombre' %>
        <br>
        <%= f.text_field :name, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'Correo electrÃ³nico' %>
        <br>
        <%= f.email_field :email, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :body, 'Comentario' %>
        <br>
        <%= f.text_area :body, class:'form-control' %>
      </div>
      <%= f.submit 'Comentar', class:'btn btn-success' %>
    <% end %>
  </div>
</div>
